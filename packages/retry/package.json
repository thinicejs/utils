{
  "name": "@thinice/retry",
  "version": "0.0.0",
  "description": "Retries an async function N times with optional delay",
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "test": "node --import tsx --test src/index.test.ts",
    "lint": "node -e \"process.exit(0)\""
  },
  "dependencies": {
    "@thinice/sleep-ms": "workspace:*",
    "@thinice/to-string": "workspace:*"
  },
  "devDependencies": {
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  }
}
